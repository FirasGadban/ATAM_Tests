# -----------------------------------------------------
# TEST 24: Black Rook Blocked Path
# -----------------------------------------------------
# Black Rook at (7,0) -> (4,0) but path blocked
# play = [1, 7, 0]
# valid - expected result = 0
# -----------------------------------------------------

.section .data

# --- Before move ---
board_1:
    .byte 'r','n','b','q','k','b','n','r'
    .byte 'p','p','p','p','p','p','p','p'
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,0,0,0,0
    .byte 'P',0,0,0,0,0,0,0                 # Black Pawn blocks at 5,0
    .byte 'P','P','P','P','P','P','P','P'
    .byte 'R','N','B','Q','K','B','N','R' # Rook at 7,0

# --- After move ---
board_2:
    .byte 'r','n','b','q','k','b','n','r'
    .byte 'p','p','p','p','p','p','p','p'
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,0,0,0,0
    .byte 'P',0,0,0,0,0,0,0
    .byte 'P','P','P','P','P','P','P','P'
    .byte 0 ,'N','B','Q','K','B','N','R' # Rook left 7,0
    # Attempted move to 4,0 would be invalid due to blocking

play:
    .int 1, 7, 0          # 1 = Black, Row=7, Col=0

valid:
    .byte 7                # output result placeholder

.section .text

    # After ex4 returns, check if valid = 0 
    movzbl valid(%rip), %eax  
    cmp $0, %al                
    je success                 

error:
    mov $60, %rax              # sys_exit
    mov $1, %rdi               # exit code 1 (error)
    syscall

success:
    mov $60, %rax              # sys_exit
    xor %rdi, %rdi             # exit code 0 (success)
    syscall

