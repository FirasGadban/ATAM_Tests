# -----------------------------------------------------
# TEST 31: White Rook Blocked by Own Piece
# -----------------------------------------------------
# White Rook at (2,0) -> (5,0) but blocked by own pawn
# play = [0, 2, 0]
# valid - expected result = 0
# -----------------------------------------------------

.section .data

# --- Before move ---
board_1:
    .byte 'r','n','b','q','k','b','n','r'
    .byte 'p','p','p','p','p','p','p','p'
    .byte 'r',0,0,0,0,0,0,0               # White Rook at 2,0
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,0,0,0,0
    .byte 'p',0,0,0,0,0,0,0               # White Pawn blocks at 5,0
    .byte 'P','P','P','P','P','P','P','P'
    .byte 'R','N','B','Q','K','B','N','R'

# --- After move ---
board_2:
    .byte 'r','n','b','q','k','b','n','r'
    .byte 'p','p','p','p','p','p','p','p'
    .byte 0 ,0,0,0,0,0,0,0               # Rook left 2,0
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,0,0,0,0
    .byte 'p',0,0,0,0,0,0,0               # Blocking pawn still there
    # Attempted move to 5,0 would be invalid due to own piece blocking

play:
    .int 0, 2, 0          # 0 = White, Row=2, Col=0

valid:
    .byte 7                # output result placeholder

.section .text

    # After ex4 returns, check if valid = 0 
    movzbl valid(%rip), %eax  
    cmp $0, %al                
    je success                 

error:
    mov $60, %rax              # sys_exit
    mov $1, %rdi               # exit code 1 (error)
    syscall

success:
    mov $60, %rax              # sys_exit
    xor %rdi, %rdi             # exit code 0 (success)
    syscall

