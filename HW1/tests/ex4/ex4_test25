# -----------------------------------------------------
# TEST 25: White Bishop Valid Capture
# -----------------------------------------------------
# White Bishop at (2,2) -> (4,4) captures Black Pawn
# play = [0, 2, 2]
# valid - expected result = 1
# -----------------------------------------------------

.section .data

# --- Before move ---
board_1:
    .byte 'r','n','b','q','k','b','n','r'
    .byte 'p','p','p','p','p','p','p','p'
    .byte 0,0,'b',0,0,0,0,0               # White Bishop at 2,2
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,'P',0,0,0               # Black Pawn at 4,4
    .byte 0,0,0,0,0,0,0,0
    .byte 'P','P','P','P', 0 ,'P','P','P'
    .byte 'R','N','B','Q','K','B','N','R'

# --- After move ---
board_2:
    .byte 'r','n','b','q','k','b','n','r'
    .byte 'p','p','p','p','p','p','p','p'
    .byte 0,0, 0 ,0,0,0,0,0               # Bishop left 2,2
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,'b',0,0,0               # Bishop moved to 4,4 (captured 'P')
    .byte 0,0,0,0,0,0,0,0
    .byte 'P','P','P','P', 0 ,'P','P','P'
    .byte 'R','N','B','Q','K','B','N','R'

play:
    .int 0, 2, 2          # 0 = White, Row=2, Col=2

valid:
    .byte 7                # output result placeholder

.section .text

    # After ex4 returns, check if valid = 1 
    movzbl valid(%rip), %eax  
    cmp $1, %al                
    je success                 

error:
    mov $60, %rax              # sys_exit
    mov $1, %rdi               # exit code 1 (error)
    syscall

success:
    mov $60, %rax              # sys_exit
    xor %rdi, %rdi             # exit code 0 (success)
    syscall

