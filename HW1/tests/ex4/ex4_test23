# -----------------------------------------------------
# TEST 23: White Queen Valid Vertical Move
# -----------------------------------------------------
# White Queen at (2,4) -> (5,4)
# play = [0, 2, 4]
# valid - expected result = 1
# -----------------------------------------------------

.section .data

# --- Before move ---
board_1:
    .byte 'r','n','b','q','k','b','n','r'
    .byte 'p','p','p','p','p','p','p','p'
    .byte 0,0,0,0,'q',0,0,0               # White Queen at 2,4
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,0,0,0,0
    .byte 'P','P','P','P','P','P','P','P'
    .byte 'R','N','B','Q','K','B','N','R'

# --- After move ---
board_2:
    .byte 'r','n','b','q','k','b','n','r'
    .byte 'p','p','p','p','p','p','p','p'
    .byte 0,0,0,0, 0 ,0,0,0               # Queen left 2,4
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,0,0,0,0
    .byte 0,0,0,0,'q',0,0,0               # Queen landed at 5,4
    .byte 'P','P','P','P','P','P','P','P'
    .byte 'R','N','B','Q','K','B','N','R'

play:
    .int 0, 2, 4          # 0 = White, Row=2, Col=4

valid:
    .byte 7                # output result placeholder

.section .text

    # After ex4 returns, check if valid = 1 
    movzbl valid(%rip), %eax  
    cmp $1, %al                
    je success                 

error:
    mov $60, %rax              # sys_exit
    mov $1, %rdi               # exit code 1 (error)
    syscall

success:
    mov $60, %rax              # sys_exit
    xor %rdi, %rdi             # exit code 0 (success)
    syscall

