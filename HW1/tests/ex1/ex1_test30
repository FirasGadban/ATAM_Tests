# -----------------------------------------------------
# TEST 30: Vowel Counting
# -----------------------------------------------------
# String: "vowel"
# Expected count: 2
# -----------------------------------------------------

.section .data

str:
    .string "vowel"

count:
    .int -1                # output result placeholder

.section .text

    # After ex1 returns, check if count matches expected value
    movl count(%rip), %eax
    cmp $2, %eax
    je success

error:
    mov $60, %rax              # sys_exit
    mov $1, %rdi               # exit code 1 (error)
    syscall

success:
    mov $60, %rax              # sys_exit
    xor %rdi, %rdi             # exit code 0 (success)
    syscall
