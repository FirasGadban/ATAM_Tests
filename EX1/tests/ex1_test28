# -----------------------------------------------------
# TEST 28: Vowel Counting
# -----------------------------------------------------
# String: "a1e2i3o4u5"
# Expected count: 5
# -----------------------------------------------------

.section .data

str:
    .string "a1e2i3o4u5"

count:
    .int -1                # output result placeholder

.section .text

    # After ex1 returns, check if count matches expected value
    movl count(%rip), %eax
    cmp $5, %eax
    je success

error:
    mov $60, %rax              # sys_exit
    mov $1, %rdi               # exit code 1 (error)
    syscall

success:
    mov $60, %rax              # sys_exit
    xor %rdi, %rdi             # exit code 0 (success)
    syscall
